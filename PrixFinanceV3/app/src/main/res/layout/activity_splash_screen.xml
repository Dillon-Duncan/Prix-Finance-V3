<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_floatingitem">


    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/light_blue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txtAppDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/txtAppDesc"
        android:layout_width="237dp"
        android:layout_height="116dp"
        android:text="@string/txt_AppDesc"
        android:textColor="@color/light_blue"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
      android:id="@+id/btnGetStarted"
      android:layout_width="320dp"
      android:layout_height="50dp"
      android:background="@drawable/button_bg"
      android:textColor="@color/black"
      android:text="@string/btn_getStarted"
      android:textSize="23sp"
      android:layout_marginTop="125dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtAppDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>


